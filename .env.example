# USB Drop Campaign Management System - Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# VPS Configuration
# =============================================================================
VPS_IP=your.server.ip.address

# =============================================================================
# Domain Configuration
# =============================================================================
CANARY_DOMAIN=subproject55.com
APP_DOMAIN=becomeaninternetghost.com

# =============================================================================
# Database
# =============================================================================
DB_PASSWORD=generate-a-strong-password-here
DATABASE_URL=postgresql://usbdrop:${DB_PASSWORD}@postgres:5432/usbdrop

# =============================================================================
# CanaryTokens Configuration
# =============================================================================
# Generate with: openssl rand -hex 32
FACTORY_AUTH=your-factory-auth-token

# Google API Key (required for CanaryTokens)
# Used for: Google Docs tokens, Google Maps/GeoIP features
# Get from: https://console.cloud.google.com/apis/credentials
# Enable APIs: Maps JavaScript API, Places API, Docs API
GOOGLE_API_KEY=your-google-api-key

# =============================================================================
# Email Provider (choose one)
# =============================================================================
# Mailgun
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.subproject55.com
MAILGUN_BASE_URL=https://api.mailgun.net

# OR SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# =============================================================================
# OpenAI (for content generation)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# Slack Notifications
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# JWT Authentication
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Initial Admin User (created on first run)
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# =============================================================================
# WireGuard (for WireGuard tokens)
# =============================================================================
# Generate with: dd bs=32 count=1 if=/dev/urandom 2>/dev/null | base64
WG_PRIVATE_KEY_SEED=your-wireguard-key-seed
